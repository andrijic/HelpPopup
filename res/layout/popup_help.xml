<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" android:id="@+id/tooltip_root">

     <ImageView
         android:id="@+id/tooltip_pointer_up"
         android:layout_width="wrap_content"
         android:layout_height="7dp"
         android:src="@drawable/tooltip_arrow_up" android:contentDescription="TODO" android:layout_marginLeft="5dp"/>

 	 <FrameLayout
 	     android:id="@+id/tooltip_contentholder"
 	     android:layout_width="wrap_content"
 	     android:layout_height="wrap_content"
 	     android:layout_alignParentLeft="true"
 	     android:layout_below="@+id/tooltip_pointer_up"
 	     android:background="@drawable/background_shape"
 	     android:paddingBottom="3dp"
 	     android:paddingLeft="3dp"
 	     android:paddingRight="3dp"
 	     android:paddingTop="3dp"
 	     android:scrollbars="none" >

 	     <TextView
 	         android:id="@+id/tooltip_contenttv"
 	         android:layout_width="wrap_content"
 	         android:layout_height="wrap_content"
 	         android:text="afdfa dafkd;fkjd; fkajkldafjlkdfjkdsl f aaaaaaaa" />
 	 </FrameLayout>
 	 
<ImageView
 	     android:id="@+id/tooltip_pointer_down"
 	     android:layout_width="wrap_content"
 	     android:layout_height="7dp" 	    
 	      android:layout_below="@id/tooltip_contentholder"
 	     android:src="@drawable/tooltip_arrow_down" android:layout_marginLeft="5dp" />
</RelativeLayout>
